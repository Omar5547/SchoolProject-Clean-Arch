@model ClassViewModel


@{
    ViewData["Title"] = "Edit";
}

<h1> Edit</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId">Teacher</label>
        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teachers"></select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>
    <input type="submit" value="save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>