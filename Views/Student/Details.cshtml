@model StudentViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<form asp-action="Details">

    <div class="form-group">
        <label class="col-form-label" asp-for="name"></label>
        <input readonly class="form-control" asp-for="name" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Birthdate"></label>
        <input readonly class="form-control" asp-for="Birthdate" />
    </div>
    <div class="form-group">
        <label>Class:</label>
        <input class="form-control" value="@Model.Classes" readonly />
    </div>

    <div class="form-group">
        <label>Parent:</label>
        <input class="form-control" value="@Model.Parents" readonly />
    </div>
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-light">Edit</a>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
