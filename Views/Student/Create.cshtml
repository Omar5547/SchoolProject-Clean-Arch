@model StudentViewModel

    
    @{
        ViewData["Title"] = "Create";
    }

    <h1> Create New Student</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label class="col-form-label" asp-for="name"></label>
            <input class="form-control" asp-for="name" />
        <span asp-validation-for="name" class="text-danger"></span>
        </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Birthdate"></label>
        <input class="form-control" asp-for="Birthdate" />
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClassId"></label>
        <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Classes"></select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ParentId"></label>
        <select asp-for="ParentId" class="form-control" asp-items="ViewBag.Parents"></select>
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>

    <input type="submit" value="submit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>

    </form>